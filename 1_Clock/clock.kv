# File: clock.kv

<Etiqueta@Label>:
    font_name: 'Roboto-Thin'
    font_size: 60
    markup: True

<RobotoButton@Button>:
    font_name: 'Roboto-Medium'
    font_size: 25
    bold: True
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    border: (2, 2, 2, 2)


BoxLayout:
    orientation: 'vertical'
    
    Etiqueta:
        id: time
        text: '[b]00[/b]:00:00'
        
    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)
        
        RobotoButton:
            id: start_stop
            text: 'Start'
            on_press: app.start_stop()
            
        RobotoButton:
            id: reset
            text: 'Reset'
            on_press: app.reset()
            
    Etiqueta:
        id: crono
        text: '00:00.[size=40]00[/size]'

